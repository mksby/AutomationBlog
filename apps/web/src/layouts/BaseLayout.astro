---
import { SEO } from "astro-seo";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import SkipLink from "@/components/SkipLink.astro";
import BackToTop from "@/components/BackToTop.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import { siteConfig } from "@/site.config";
import "@/styles/global.css";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = siteConfig.description, ogImage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteName = siteConfig.title;
---

<!doctype html>
<html lang={siteConfig.lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      canonical={canonicalURL.href}
      openGraph={{
        basic: {
          title,
          type: "website",
          image: ogImage || `${Astro.site}social-card.png`,
          url: canonicalURL.href,
        },
        optional: {
          description,
          siteName,
        },
      }}
      twitter={{
        card: "summary_large_image",
        title,
        description,
        image: ogImage || `${Astro.site}social-card.png`,
      }}
    />
    <ThemeProvider />
  </head>
  <body class="min-h-screen bg-bg-body text-text-body">
    <SkipLink />
    <div class="flex min-h-screen flex-col">
      <Header />
      <main id="main-content" class="mx-auto w-full max-w-3xl flex-1 px-4 py-8">
        <slot />
      </main>
      <Footer />
    </div>
    <BackToTop />
  </body>
</html>
