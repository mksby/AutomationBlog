---
import BaseLayout from "@/layouts/BaseLayout.astro";
import StatusBadge from "@/components/StatusBadge.astro";
import TagList from "@/components/TagList.astro";
import CategoryBadge from "@/components/CategoryBadge.astro";
import AuthorCard from "@/components/AuthorCard.astro";
import StrapiBlocks from "@/components/StrapiBlocks.astro";
import { getProjects, getProjectBySlug, getStrapiMediaUrl } from "@/lib/strapi";

export async function getStaticPaths() {
  const { data: projects } = await getProjects(1, 100);
  return projects.map((p: any) => ({ params: { slug: p.slug } }));
}

const { slug } = Astro.params;
const { data: projects } = await getProjectBySlug(slug!);
const project = projects[0];

if (!project) return Astro.redirect("/404");

const ogImage = project.seo?.ogImage
  ? getStrapiMediaUrl(project.seo.ogImage.url)
  : undefined;
---

<BaseLayout
  title={project.seo?.metaTitle || project.title}
  description={project.seo?.metaDescription || project.description || undefined}
  ogImage={ogImage}
>
  <article>
    <header class="mb-8">
      {project.categories?.length > 0 && (
        <div class="mb-3 flex flex-wrap gap-2">
          {project.categories.map((cat: any) => (
            <CategoryBadge name={cat.name} slug={cat.slug} color={cat.color} />
          ))}
        </div>
      )}

      <h1 class="text-3xl font-bold leading-tight sm:text-4xl">{project.title}</h1>

      <div class="mt-3 flex flex-wrap items-center gap-3">
        {project.status && <StatusBadge status={project.status} />}
        {project.techStack && project.techStack.length > 0 && (
          <div class="flex flex-wrap gap-1.5">
            {project.techStack.map((tech: string) => (
              <span class="rounded-full bg-surface px-2.5 py-0.5 text-xs font-medium text-text-muted">
                {tech}
              </span>
            ))}
          </div>
        )}
      </div>

      <div class="mt-4 flex gap-3">
        {project.repositoryUrl && (
          <a
            href={project.repositoryUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1.5 rounded-lg border border-border px-4 py-2 text-sm font-medium transition-colors hover:bg-surface"
          >
            <svg class="size-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
            </svg>
            Source Code
          </a>
        )}
        {project.liveUrl && (
          <a
            href={project.liveUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1.5 rounded-lg bg-accent px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-accent/90"
          >
            <svg class="size-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
            Live Demo
          </a>
        )}
      </div>
    </header>

    {project.coverImage && (
      <img
        src={getStrapiMediaUrl(project.coverImage.url)}
        alt={project.coverImage.alternativeText || project.title}
        width={project.coverImage.width}
        height={project.coverImage.height}
        class="mb-8 aspect-video w-full rounded-xl object-cover"
      />
    )}

    {project.gallery && project.gallery.length > 0 && (
      <div class="mb-8 grid grid-cols-2 gap-3 sm:grid-cols-3">
        {project.gallery.map((img: any) => (
          <img
            src={getStrapiMediaUrl(img.url)}
            alt={img.alternativeText || ""}
            width={img.width}
            height={img.height}
            class="rounded-lg object-cover"
            loading="lazy"
          />
        ))}
      </div>
    )}

    <StrapiBlocks content={project.content} />

    <footer class="mt-12 space-y-6 border-t border-border pt-8">
      {project.tags?.length > 0 && <TagList tags={project.tags} />}
      {project.author && <AuthorCard author={project.author} />}
    </footer>
  </article>
</BaseLayout>
