---
interface Props {
  date: string;
  class?: string;
}

const { date, class: className } = Astro.props;
const d = new Date(date);
const formatted = d.toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<time datetime={d.toISOString()} class={className}>
  {formatted}
</time>
