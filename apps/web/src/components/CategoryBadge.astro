---
interface Props {
  name: string;
  slug: string;
  color?: string | null;
  linked?: boolean;
}

const { name, slug, color, linked = true } = Astro.props;
const bgColor = color || "#6366f1";
---

{linked ? (
  <a
    href={`/categories/${slug}`}
    class="inline-flex rounded-md px-2.5 py-0.5 text-xs font-semibold text-white transition-opacity hover:opacity-80"
    style={`background-color: ${bgColor}`}
  >
    {name}
  </a>
) : (
  <span
    class="inline-flex rounded-md px-2.5 py-0.5 text-xs font-semibold text-white"
    style={`background-color: ${bgColor}`}
  >
    {name}
  </span>
)}
