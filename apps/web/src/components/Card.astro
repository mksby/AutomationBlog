---
import FormattedDate from "./FormattedDate.astro";
import type { StrapiImage } from "@/lib/types";
import { getStrapiMediaUrl } from "@/lib/strapi";

interface Props {
  title: string;
  href: string;
  description?: string | null;
  date?: string | null;
  coverImage?: StrapiImage | null;
  tags?: { name: string; slug: string }[];
}

const { title, href, description, date, coverImage, tags } = Astro.props;
---

<article class="group">
  <a href={href} class="block rounded-xl border border-border p-5 transition-all hover:border-accent/50 hover:shadow-sm">
    {coverImage && (
      <img
        src={getStrapiMediaUrl(coverImage.url)}
        alt={coverImage.alternativeText || title}
        width={coverImage.width}
        height={coverImage.height}
        class="mb-4 aspect-video w-full rounded-lg object-cover"
        loading="lazy"
        decoding="async"
      />
    )}
    <h2 class="text-lg font-semibold text-text-body group-hover:text-accent transition-colors">
      {title}
    </h2>
    {date && (
      <FormattedDate date={date} class="mt-1 block text-sm text-text-muted" />
    )}
    {description && (
      <p class="mt-2 line-clamp-2 text-sm text-text-muted">{description}</p>
    )}
    {tags && tags.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-1.5">
        {tags.map((tag) => (
          <span class="rounded-full bg-surface px-2.5 py-0.5 text-xs text-text-muted">
            #{tag.name}
          </span>
        ))}
      </div>
    )}
    <slot />
  </a>
</article>
